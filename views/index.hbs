<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <div class="col-3">
        <h4 class="mb-2">尋找餐廳：</h4>
      </div>
      <div class="col-7">
        <form action="/search">
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳名稱、分類" aria-label="Restaurant Name..." value="" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>
      <div class="dropdown col-2 mr-5">
        <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown">
          {{#if sortby}} {{sortby}} {{else}} 排序 {{/if}}
        </button>
        <div class="dropdown-menu">
          <a class="dropdown-item" href="/sort/name/asc">A -> Z</a>
          <a class="dropdown-item" href="/sort/name/desc">Z -> A</a>
          <a class="dropdown-item" href="/sort/category/asc">類別</a>
          <a class="dropdown-item" href="/sort/location/asc">地區</a>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <div class="d-flex justify-content-between">
                <span class="badge badge-pill badge-info font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <div>
                  <a class="btn btn-success" href="./restaurants/{{ this._id }}/edit">edit</a>
                  <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                    <button class="btn btn-danger" type="submit">delete</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>